extends layout.pug
block head
    script(src="https://cdnjs.cloudflare.com/ajax/libs/mathjax/2.7.4/latest.js?config=AM_CHTML")
block content
    
    main
        center
            h5.TitleWP.SecundaryText.text-lighten-2 Programa para observar la amplitud y frecuencia
                .section
                .container
                    .z-depth-1.lighten-4.row.NavBarWP.log_in
                        form.col.s12(method="post" action="/home/F_T" id="submit")
                            .row
                                .input-field.col.s12
                                    input.white-text#numA(type="text" name="numA")
                                    label() Ingresa a
                            br
                            center
                                .row
                                    button.col.s12.btn.btn-large.waves-effect.waves-light.grey.darken-4(type="submit" name="btn_login") Send
block postBanner    
    .section.dark.center
        br
        h5.light.white-text Dada la función
        br
        h5.light.white-text
            script(type="math/asciimath")
                |f(t) = 1/(a^2+t^2)
        br
        h5.light.white-text Y su transformada de Fourier
        br
        h5.light.white-text 
            script(type="math/asciimath")
                |F(w) = (sqrt(pi/2) e^(-a*abs(w)))/a
        br
        h5.light.white-text Sus gráficas son
        br
    
    .section.center.tit
        h2 Gráfica de función
        .plotAbs#plotAbs
        h2 Gráfica de transformada
        .plotAng#plotAng
block script
    script(src='../javascripts/home/initT_F.js')
    script(src='../javascripts/plotly-latest.min.js')
